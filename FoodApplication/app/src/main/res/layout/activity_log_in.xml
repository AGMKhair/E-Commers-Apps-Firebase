<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/foodb"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hasib.foodapplication.LogIn">
    <LinearLayout
        android:id="@+id/extSection"
        android:orientation="vertical"
        android:layout_marginTop="250dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <com.rengwuxian.materialedittext.MaterialEditText

            android:text="01727123374"
            android:id="@+id/number"
            android:inputType="number"
            android:textSize="20dp"
            app:met_singleLineEllipsis="true"

            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_baseColor="#EF9A9A"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:text="hasib"

            android:id="@+id/Password"
            android:inputType="textPassword"
            android:textSize="10dp"
            app:met_singleLineEllipsis="true"

            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_baseColor="#EF9A9A"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""/>

    <LinearLayout

           android:weightSum="2"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
          <com.rey.material.widget.CheckBox

              android:layout_marginLeft="10dp"
              android:text="Remember me"
              android:id="@+id/checkbox"
              android:gravity="center_vertical"
              style="@style/Material.Drawable.CheckBox"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/forgetPass"
                android:layout_weight="1"
                android:text="@string/forgetPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


           </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/extSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#30AAAAAA"
            android:layout_gravity="center"
            android:id="@+id/buttonSingIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Log In"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_logIn"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp"

            />

    </LinearLayout>


</RelativeLayout>
